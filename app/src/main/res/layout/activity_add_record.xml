<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.haoranzhao.jilizhang.AddRecord"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:weightSum="5">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dip"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:paddingRight="30dip"
        android:paddingLeft="30dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/No1"
                android:textSize="20sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addNewCheckBox"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Add_new_person"
                android:id="@+id/addNewPersonTxt"
                android:textSize="20sp"/>

        </LinearLayout>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personNameEdittxt"
        android:hint="@string/e_g_Name"
        android:textSize="20sp"
        android:singleLine="true"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/skipping_step"
            android:textSize="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dip"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="30dip"
        android:paddingRight="30dip">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/No2"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pick_a_person"
            android:id="@+id/chooseAPersonTxt"
            android:textSize="20sp"/>
        </LinearLayout>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectPersonSpinner"
            android:spinnerMode="dialog"
            android:textSize="15sp"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dip"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="30dip"
        android:paddingRight="30dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/No3"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Choose_a_direction"
                android:textSize="20sp"/>
        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fromWhomRG"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noFromMeRB"
                android:text="@string/he_she_gives_me"
                android:checked="true"
                android:textSize="20sp"
                >
                </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fromMeRB"
                android:text="@string/I_give_him_her"
                android:textSize="20sp">
            </RadioButton>

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dip"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="30dip"
        android:paddingRight="30dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/No4"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Input_amount"
                android:textSize="20sp"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/amountEditTxt"
            android:hint="@string/e_g_amount"
            android:textSize="20sp"
            android:singleLine="true"/>
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dip"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:layout_margin="10dip">

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/savebtn"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_check_black_24dp"
                android:background="#C0CFE8"/>

    </LinearLayout>



</LinearLayout>
