<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.haoranzhao.jilizhang.AllRecords"
    android:orientation="vertical"
    android:id="@+id/MyListViewContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NoRecordTxt"
            android:layout_gravity="center"
            android:text="@string/no_record_yet">
        </TextView>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:id="@+id/MyListView">
    </ListView>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#C0CFE8"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="10dip"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/totalBalance_TV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_g_Your_total_balance_is_amount"
                android:textSize="20sp"
                />

        </LinearLayout>

    </LinearLayout>

